@page
@model Arcanum.Pages.IndexModel
@{
    ViewData["Title"] = Model.MainPage.SiteTitle;
}

<div id="index-container">
    <div class="container-one">
        <div class="mainpage-image-container">
            @if (Model.MainPage.PageImage[0].Image.Display)
            {
                <img src="@Model.MainPage.PageImage[0].Image.SourceUrl" alt="site-image" class="mainpage-image"/>
            }
        </div>
        <div><p class="format-paragraph">@Model.MainPage.IntroA</p></div>
        <div>
            <partial name="_ArtistNav" />
        </div>
    </div>

    <div class="container-two">
        <div class="mainpage-image-container">
            @if (Model.MainPage.PageImage[1].Image.Display)
            {
                <img src="@Model.MainPage.PageImage[1].Image.SourceUrl" alt="site-image" class="mainpage-image"/>
            }
        </div>
        <div><h3>Recent Posts</h3></div>
        <div>
            <partial name="_RecentImageGallery" />
        </div>
    </div>

    <div class="container-three">
        <div><p class="format-paragraph">@Model.MainPage.IntroB</p></div>
        <div class="mainpage-image-container">
            @if (Model.MainPage.PageImage[2].Image.Display)
            {
                <img src="@Model.MainPage.PageImage[2].Image.SourceUrl" alt="site-image" class="mainpage-image"/>
            }
        </div>
    </div>
</div>

@if (User.IsInRole("WizardLord"))
{
    <i class="show-popup">admin</i>
}

@if (User.IsInRole("WizardLord"))
{
    <div class="admin-outer mainpage-admin @(Model.ActiveAdmin ? "" : "hide-me")">
        <div class="admin-inner">
            <partial name="Admin/_MainPage" />
        </div>
        <i class="site-button close-outer-admin">close</i>
        <i class="x-close-button close-outer-admin">X</i>
    </div>
}

@if (Model.MainPage.ShowHomePageMessage)
{
    <div class="main-page-popup @(Model.MainPage.ShowHomePageMessage ? "" : "hide-me")">
        <div>
            <partial name="_HomePagePopUp" />
        </div>
        <i class="site-button close-main-page-popup">close</i>
        <i class="x-close-button close-main-page-popup">X</i>
    </div>    
}

<div class="fullscreen-fade @(Model.ActiveAdmin || Model.MainPage.ShowHomePageMessage ? "" : "hide-me")"></div>