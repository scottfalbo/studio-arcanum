@page
@model Arcanum.Pages.TheStudioModel
@{
    ViewData["Title"] = "The Studio";
}

<div id="studio-container">
    <div class="container-one">
        <figure>
            <img />
        </figure>
        <div>
            <address>
                <p>@Model.StudioInfo.Address.Street</p>
                <p>
                    @Model.StudioInfo.Address.City, @Model.StudioInfo.Address.State
                    @Model.StudioInfo.Address.ZipCode
                </p>
            </address>
            <p>@Model.StudioInfo.Email</p>
        </div>
        <div>
            <i>instagram</i>
            <i>policies</i>
            <i>aftercare</i>
            <i>location</i>
        </div>
    </div>

    <div class="container-two">
        <p>@Model.StudioInfo.Intro</p>
    </div>

    <div class="container-three">
        @foreach (var image in Model.StudioInfo.StudioImages)
        {
            <img src="@image.Image.ThumbnailUrl" />
        }
    </div>
</div>
<div id="studio-policies">@Model.StudioInfo.Policies</div>
<div id="studio-aftercare">@Model.StudioInfo.Aftercare</div>


@if (User.IsInRole("WizardLord"))
{
    <partial name="_AdminButton" />
}

@if (User.IsInRole("WizardLord"))
{
    <div class="admin-outer studio-page-admin @(Model.ActiveAdmin ? "" : "hide-me")">
        <div class="admin-inner">
            <partial name="Admin/_StudioPage" />
        </div>
        <i class="site-button close-outer-admin">close</i>
        <i class="x-close-button close-outer-admin">X</i>
    </div>
}

<div class="fullscreen-fade @(Model.ActiveAdmin ? "" : "hide-me")"></div>